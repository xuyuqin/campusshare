<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.yqx.modules.campusshare.dao.CRegisterDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.yqx.modules.campusshare.entity.CRegisterEntity" id="cRegisterMap">
        <result property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="salt" column="salt"/>
        <result property="email" column="email"/>
        <result property="mobile" column="mobile"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="address" column="address"/>
        <result property="collegeId" column="college_id"/>
        <result property="grade" column="grade"/>
    </resultMap>

	<select id="queryObject" resultType="io.yqx.modules.campusshare.entity.CRegisterEntity">
		select * from c_register where id = #{value}
	</select>

	<select id="queryByMobile" resultType="io.yqx.modules.campusshare.entity.CRegisterEntity">
		select * from c_register where mobile = #{mobile}
	</select>


	<select id="queryList" resultType="io.yqx.modules.campusshare.entity.CRegisterEntity">
		select * from c_register
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from c_register 
	</select>
	 
	<insert id="save" parameterType="io.yqx.modules.campusshare.entity.CRegisterEntity" useGeneratedKeys="true" keyProperty="id">
		insert into c_register
		(
			`username`, 
			`password`, 
			`salt`, 
			`email`, 
			`mobile`, 
			`status`, 
			`create_time`, 
			`address`, 
			`college_id`, 
			`grade`
		)
		values
		(
			#{username}, 
			#{password}, 
			#{salt}, 
			#{email}, 
			#{mobile}, 
			#{status}, 
			#{createTime}, 
			#{address}, 
			#{collegeId}, 
			#{grade}
		)
	</insert>
	 
	<update id="update" parameterType="io.yqx.modules.campusshare.entity.CRegisterEntity">
		update c_register 
		<set>
			<if test="username != null">`username` = #{username}, </if>
			<if test="password != null">`password` = #{password}, </if>
			<if test="salt != null">`salt` = #{salt}, </if>
			<if test="email != null">`email` = #{email}, </if>
			<if test="mobile != null">`mobile` = #{mobile}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="address != null">`address` = #{address}, </if>
			<if test="collegeId != null">`college_id` = #{collegeId}, </if>
			<if test="grade != null">`grade` = #{grade}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from c_register where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from c_register where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>